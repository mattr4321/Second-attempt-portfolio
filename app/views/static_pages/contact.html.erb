

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div id="contact_page">
  <h1>Contact Us</h1>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :name %>
      
      <%= text_field_tag :name, nil, class: "btn btn-default form-control",  placeholder: "Enter Name" %>
    </div>      
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "btn btn-default form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "btn btn-default form-control", placeholder: "Enter Message" %>
    </div>      
  </div>
</div>
 
  <%= submit_tag "Submit", class:'btn btn-default' %>
<% end %>
</div>



<div class="pic">
  <%= image_tag("http://images.media-allrecipes.com/userphotos/250x250/00/70/88/708879.jpg", class: "img-responsive") %>
</div>

